{
  "name": "jjj",
  "displayName": "Jujutsu Journaling",
  "description": "jujutsuで文書の変更履歴を自動記録する拡張機能",
  "version": "0.1.0",
  "publisher": "rubellum",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubellum/jjj.git"
  },
  "bugs": {
    "url": "https://github.com/rubellum/jjj/issues"
  },
  "homepage": "https://github.com/rubellum/jjj#readme",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "jujutsu",
    "version-control",
    "git",
    "auto-commit",
    "auto-sync"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jjj.manualSync",
        "title": "JJJ: 今すぐ同期",
        "icon": "$(sync)"
      },
      {
        "command": "jjj.enable",
        "title": "JJJ: 自動同期を有効化"
      },
      {
        "command": "jjj.disable",
        "title": "JJJ: 自動同期を無効化"
      }
    ],
    "configuration": {
      "title": "Jujutsu Journaling",
      "properties": {
        "jjj.autoSyncEnabled": {
          "type": "boolean",
          "default": true,
          "description": "自動同期を有効化"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.27.2",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  }
}
