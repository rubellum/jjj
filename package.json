{
  "name": "jjj",
  "displayName": "Jujutsu Journaling",
  "description": "jujutsuで文書の変更履歴を自動記録する拡張機能",
  "version": "0.1.1",
  "publisher": "rubellum",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubellum/jjj.git"
  },
  "bugs": {
    "url": "https://github.com/rubellum/jjj/issues"
  },
  "homepage": "https://github.com/rubellum/jjj#readme",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "jujutsu",
    "version-control",
    "git",
    "auto-commit",
    "auto-sync"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jjj-sidebar",
          "title": "Jujutsu Journaling",
          "icon": "$(git-commit)"
        }
      ]
    },
    "views": {
      "jjj-sidebar": [
        {
          "id": "jjj.conflictView",
          "name": "コンフリクト",
          "when": "jjj.active"
        },
        {
          "id": "jjj.historyView",
          "name": "変更履歴",
          "when": "jjj.active"
        }
      ]
    },
    "commands": [
      {
        "command": "jjj.toggleAutoSync",
        "title": "JJJ: 自動同期を切り替え"
      },
      {
        "command": "jjj.manualSync",
        "title": "JJJ: 今すぐ同期",
        "icon": "$(sync)"
      },
      {
        "command": "jjj.enable",
        "title": "JJJ: 自動同期を有効化"
      },
      {
        "command": "jjj.disable",
        "title": "JJJ: 自動同期を無効化"
      },
      {
        "command": "jjj.refreshConflicts",
        "title": "JJJ: コンフリクトを更新",
        "icon": "$(refresh)"
      },
      {
        "command": "jjj.refreshHistory",
        "title": "JJJ: 履歴を更新",
        "icon": "$(refresh)"
      },
      {
        "command": "jjj.openConflictFile",
        "title": "JJJ: コンフリクトファイルを開く"
      },
      {
        "command": "jjj.showCommitDetails",
        "title": "JJJ: コミット詳細を表示"
      },
      {
        "command": "jjj.loadMoreHistory",
        "title": "JJJ: さらに読み込む"
      },
      {
        "command": "jjj.showFileHistory",
        "title": "JJJ: このファイルの履歴を表示"
      },
      {
        "command": "jjj.copyConflictPrompt",
        "title": "JJJ: コンフリクト解消プロンプトをコピー",
        "icon": "$(copy)"
      },
      {
        "command": "jjj.copyAllConflictsPrompt",
        "title": "JJJ: 全コンフリクトのプロンプトをコピー",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "jjj.refreshConflicts",
          "when": "view == jjj.conflictView",
          "group": "navigation"
        },
        {
          "command": "jjj.copyAllConflictsPrompt",
          "when": "view == jjj.conflictView && jjj.hasConflicts",
          "group": "navigation"
        },
        {
          "command": "jjj.refreshHistory",
          "when": "view == jjj.historyView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "jjj.copyConflictPrompt",
          "when": "view == jjj.conflictView && viewItem == conflictFile",
          "group": "inline@1"
        }
      ],
      "editor/context": [
        {
          "command": "jjj.showFileHistory",
          "when": "jjj.active",
          "group": "jjj@1"
        }
      ]
    },
    "configuration": {
      "title": "Jujutsu Journaling",
      "properties": {
        "jjj.autoSyncEnabled": {
          "type": "boolean",
          "default": false,
          "description": "自動同期を有効化（リポジトリごとに設定を推奨）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.27.2",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  }
}
