{
  "name": "jjj",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.1.3",
  "publisher": "rubellum",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rubellum/jjj.git"
  },
  "bugs": {
    "url": "https://github.com/rubellum/jjj/issues"
  },
  "homepage": "https://github.com/rubellum/jjj#readme",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "jujutsu",
    "version-control",
    "git",
    "auto-commit",
    "auto-sync"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jjj-sidebar",
          "title": "Jujutsu Journaling",
          "icon": "$(git-commit)"
        }
      ]
    },
    "views": {
      "jjj-sidebar": [
        {
          "id": "jjj.conflictView",
          "name": "%view.conflicts%",
          "when": "jjj.active"
        },
        {
          "id": "jjj.historyView",
          "name": "%view.history%",
          "when": "jjj.active"
        }
      ]
    },
    "commands": [
      {
        "command": "jjj.toggleAutoSync",
        "title": "%command.toggleAutoSync%"
      },
      {
        "command": "jjj.manualSync",
        "title": "%command.manualSync%",
        "icon": "$(sync)"
      },
      {
        "command": "jjj.enable",
        "title": "%command.enable%"
      },
      {
        "command": "jjj.disable",
        "title": "%command.disable%"
      },
      {
        "command": "jjj.refreshConflicts",
        "title": "%command.refreshConflicts%",
        "icon": "$(refresh)"
      },
      {
        "command": "jjj.refreshHistory",
        "title": "%command.refreshHistory%",
        "icon": "$(refresh)"
      },
      {
        "command": "jjj.openConflictFile",
        "title": "%command.openConflictFile%"
      },
      {
        "command": "jjj.showCommitDetails",
        "title": "%command.showCommitDetails%"
      },
      {
        "command": "jjj.loadMoreHistory",
        "title": "%command.loadMoreHistory%"
      },
      {
        "command": "jjj.showFileHistory",
        "title": "%command.showFileHistory%"
      },
      {
        "command": "jjj.copyConflictPrompt",
        "title": "%command.copyConflictPrompt%",
        "icon": "$(copy)"
      },
      {
        "command": "jjj.copyAllConflictsPrompt",
        "title": "%command.copyAllConflictsPrompt%",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "jjj.refreshConflicts",
          "when": "view == jjj.conflictView",
          "group": "navigation"
        },
        {
          "command": "jjj.copyAllConflictsPrompt",
          "when": "view == jjj.conflictView && jjj.hasConflicts",
          "group": "navigation"
        },
        {
          "command": "jjj.refreshHistory",
          "when": "view == jjj.historyView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "jjj.copyConflictPrompt",
          "when": "view == jjj.conflictView && viewItem == conflictFile",
          "group": "inline@1"
        }
      ],
      "editor/context": [
        {
          "command": "jjj.showFileHistory",
          "when": "jjj.active",
          "group": "jjj@1"
        }
      ]
    },
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "jjj.autoSyncEnabled": {
          "type": "boolean",
          "default": false,
          "description": "%config.autoSyncEnabled%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.27.2",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "vscode-nls": "^5.2.0"
  }
}
